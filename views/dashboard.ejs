<%- include('_header'); -%>

<h1 class="title is-1">Records Dashboard</h1>

<div class="columns">
  <div class="column is-two-thirds">
    <div class="box">
      <form id="form--filters">
        <div class="columns">
          <div class="column is-narrow">
            <div class="control is-expanded has-icons-left">
              <div class="select is-fullwidth">
                <select id="filter--recordTypeKey">
                  <option value="">(All Record Types)</option>
                  <% for (const recordType of recordTypes) { %>
                    <option value="<%= recordType.recordTypeKey %>">
                      <%= recordType.recordType %>
                    </option>
                  <% } %>
                </select>
              </div>
              <span class="icon is-small is-left">
                <i class="fas fa-filter" aria-hidden="true"></i>
              </span>
            </div>
          </div>
          <div class="column">
            <div class="control has-icons-left">
              <input class="input" id="filter--record" type="text" />
              <span class="icon is-small is-left">
                <i class="fas fa-search" aria-hidden="true"></i>
              </span>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div id="container--searchResults"></div>
  </div>
  <% if (user.canUpdate) { %>
  <div class="column">
    <div class="panel is-success">
      <h2 class="panel-heading">Create a New Record</h2>
      <% for (const recordType of recordTypes) { %>
        <a class="panel-block" href="<%= urlPrefix %>/new/<%= recordType.recordTypeKey %>">
          <span class="panel-icon">
            <i class="fas fa-plus" aria-hidden="true"></i>
          </span>
          <%= recordType.recordType %>
        </a>
      <% } %>
  </div>
  <% } %>
</div>

<%- include('_footerA'); -%>
<<script src="<%= urlPrefix %>/javascripts/dashboard.min.js"></script>
<%- include('_footerB'); -%>
